<?xml version="1.0" encoding="UTF-8"?>
<portlet-app id="facelets-demo" version="1.0">

	<portlet id="faceletsDemo">
		<init-param>
			<name>ViewPage</name>
			<value>/view.xhtml</value>
		</init-param>
		<init-param>
			<name>EditPage</name>
			<value>/edit.xhtml</value>
		</init-param>
		<init-param>
			<name>HelpPage</name>
			<value>/help.xhtml</value>
		</init-param>
		<description>Facelets portlet demo</description>
		<portlet-name>faceletsDemo</portlet-name>
		<display-name>JSF Portlet - Facelets Myfaces demo</display-name>
		<portlet-class>app.MyOwnPortlet</portlet-class>

		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>HELP</portlet-mode>
		</supports>

		<portlet-info>
			<title>JSF Portlet - Facelets Myfaces demo</title>
			<short-title>guessNumberMyFaces</short-title>
		</portlet-info>
	</portlet>

</portlet-app>
